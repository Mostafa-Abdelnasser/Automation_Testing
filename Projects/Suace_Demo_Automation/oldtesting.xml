<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<!-- Top-level suite -->
<suite name="SauceDemo Master Suite" parallel="false">

    <!-- Smoke suite: quick critical flows -->
    <test name="Smoke Suite">
        <classes>
            <class name="tests.LoginTest"/>
            <class name="tests.InventoryTest"/>
            <class name="tests.CartTest"/>
            <class name="tests.CheckoutTest"/>
        </classes>
    </test>



    <!-- Full suite: everything -->
    <test name="Full Suite">
        <packages>
            <package name="tests"/>
        </packages>
    </test>

</suite>
