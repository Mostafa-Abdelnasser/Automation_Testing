pipeline {
    agent any

    tools {
        maven 'Maven_3.9'   // configure Maven in Jenkins global tools
        jdk 'JDK_24'        // configure JDK in Jenkins global tools
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/your-repo/SauceDemo_Automation.git'
            }
        }

        stage('Build & Test') {
            steps {
                sh 'mvn clean test'
            }
        }

        stage('Publish Report') {
            steps {
                publishHTML([
                    reportDir: 'reports',
                    reportFiles: 'ExtentReport_*.html',
                    reportName: 'Automation Test Report'
                ])
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'reports/ExtentReport_*.html', fingerprint: true
        }
    }
}
