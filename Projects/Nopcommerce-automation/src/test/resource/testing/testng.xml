<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!--
============================================================================
Master TestNG Suite
============================================================================
Description: Main test suite configuration for all tests.
Author: Mostafa QC

Usage:
  - mvn test -DsuiteXmlFile=src/test/resources/testng.xml
============================================================================
-->

<suite name="nopCommerce Test Suite"
       parallel="methods"
       thread-count="4"
       verbose="1">

    <!-- ================================================================== -->
    <!-- SUITE PARAMETERS -->
    <!-- ================================================================== -->
    <parameter name="browser" value="chrome"/>
    <parameter name="environment" value="demo"/>

    <!-- ================================================================== -->
    <!-- LISTENERS -->
    <!-- ================================================================== -->
    <listeners>
        <listener class-name="mostafa.qc.listeners.TestListener"/>
    </listeners>

    <!-- ================================================================== -->
    <!-- ALL TESTS -->
    <!-- ================================================================== -->
    <test name="All Tests">
        <classes>
            <class name="mostafa.qc.runners.TestRunner"/>
        </classes>
    </test>

</suite>