<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!--
============================================================================
Regression Test Suite
============================================================================
Description: Full regression suite for comprehensive testing.
Run nightly or before releases.
Author: Mostafa QC

Usage:
  - mvn test -DsuiteXmlFile=src/test/resources/regression-suite.xml
  - Expected duration: ~30-45 minutes
============================================================================
-->

<suite name="Regression Test Suite"
       parallel="methods"
       thread-count="4"
       verbose="1">

    <parameter name="browser" value="chrome"/>
    <parameter name="environment" value="demo"/>

    <listeners>
        <listener class-name="mostafa.qc.listeners.TestListener"/>
    </listeners>

    <!-- ================================================================== -->
    <!-- FEATURE-WISE TEST GROUPS -->
    <!-- ================================================================== -->

    <test name="Authentication Tests">
        <parameter name="feature" value="authentication"/>
        <classes>
            <class name="mostafa.qc.runners.RegressionTestRunner"/>
        </classes>
    </test>

</suite>