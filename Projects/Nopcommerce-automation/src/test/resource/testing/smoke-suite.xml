<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<!--
============================================================================
Smoke Test Suite
============================================================================
Description: Quick validation suite for critical functionality.
Run after every build/deployment.
Author: Mostafa QC

Usage:
  - mvn test -DsuiteXmlFile=src/test/resources/smoke-suite.xml
  - Expected duration: ~5 minutes
============================================================================
-->

<suite name="Smoke Test Suite"
       parallel="methods"
       thread-count="2"
       verbose="1">

    <parameter name="browser" value="chrome"/>
    <parameter name="environment" value="demo"/>

    <listeners>
        <listener class-name="mostafa.qc.listeners.TestListener"/>
    </listeners>

    <test name="Smoke Tests">
        <classes>
            <class name="mostafa.qc.runners.SmokeTestRunner"/>
        </classes>
    </test>

</suite>